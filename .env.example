# Coinbase Advanced Trade API Credentials
# Get your API keys from: https://www.coinbase.com/settings/api

COINBASE_API_KEY=your_api_key_here
COINBASE_API_SECRET=your_api_secret_here

# Trading Configuration
TRADING_MODE=SIMULATION
# Options: SIMULATION (no real trades) or LIVE (real trading)

# Safety Limits
MAX_POSITION_SIZE=100
# Maximum USD amount per trade

MAX_DAILY_TRADES=10
# Maximum number of trades per day

DAILY_LOSS_LIMIT=50
# Stop trading if daily loss exceeds this amount (USD)

# Trading Pair
TRADING_PAIR=BTC-USD
# The cryptocurrency pair to trade

# Profit Target (%)
PROFIT_TARGET=1.5
# Net profit target after all fees

# Stop Loss (%)
STOP_LOSS=1.0
# Maximum loss percentage before selling

# Auto Trading
AUTO_BUY_ENABLED=false
# Enable automatic buying

AUTO_SELL_ENABLED=true
# Enable automatic selling at target/stop loss

# Notifications
ENABLE_NOTIFICATIONS=false
# Enable trade notifications (future feature)
